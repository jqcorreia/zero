// This is a simple test of function definition and recursion
// Also tests if/then/else statements and variable scope
fn fib(n: i32) -> i32 {
    if n <= 1 {
        return n
    } else {
        return fib(n - 1) + fib(n - 2)
    }
    return 0
}

// Basic loop, variable utation and break statement
fn func() -> i32 {
    a = 1

    for {
        print(a)
        a = a + 1
        if a > 5 {
            break
        } else {
            a = a + 1
        }
    }
    return a
}

// Different parameter types and return values
fn param_test(x: u8, y: u8) -> u8 {
    return x + y
}

// Main function must be defined, otherwise error will be thrown
fn main() -> i32 {
    print(func()) // Should print "1 3 5" and "6"
    print(fib(10)) // Should print "55"

    print(param_test(5, 10)) // Should print "15"
    return 0
}

